#include <stdio.h>
#include <stdlib.h>
#include <stdarg.h>
#include "variadic_functions.h"

void print_char(char c)
{
	printf("%c", c);
}

void print_int(int i)
{
	printf("%d", i);
}

void print_float(float f)
{
	printf("%f", f);
}

void print_string(char *s)
{
	printf("%s", s);
}


/**
* sum_them_all - 
* @n: 
* Return: 
*/

void print_all(const char * const format, ...)
{
	va_list ap;
	int i, ii;
	const char *pass_f;

	format_t hold_f[] = {
		{c, print_char},
		{i, print_int},
		{f, print_float},
		{s, print_string}
	};

	i = 0;

	va_start(ap, format);


	while (42)
	{
		ii = 0;
		pass_f = va_arg(ap, *char);
		if (pass_f[i] == '\0')
			break;
		while (ii < 4)
		{
			if (pass_f[i] == hold_f[ii].sym)
			{
				printf("you did the thing!\n");
				break;
//				hold_f[ii]f(va_list ap);
			}
			ii++;
		}
		i++;
	}

	va_end(kiwi);

	printf("\n");

	return;
}

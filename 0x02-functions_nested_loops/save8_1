#include "holberton.h"

/**
* jack_bauer - 24 hours.
*/

void jack_bauer(void)
{
	int a, b, c, d;

	a = 0;
	b = 0;
	c = 0;
	d = 0;

	while (b % 10 < 4)
	{
		_putchar(a + '0');
		_putchar(b + '0');
		_putchar(':');
		_putchar(c + '0');
		_putchar(d + '0');
		_putchar('\n');

		if (d <= 9)
		{
			d++;
		}
		else if (c == 5 && d == 9)
		{
			b++;
			c = 0;
			d = 0;
		}
		else if 
		{
			c++;
			d = 0;
		}

		a = b % 100 / 10;

	}
}
